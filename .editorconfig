[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = false
max_line_length = 120
tab_width = 2
ij_continuation_indent_size = 8
ij_formatter_off_tag = @formatter:off
ij_formatter_on_tag = @formatter:on
ij_formatter_tags_enabled = false
ij_smart_tabs = false
ij_visual_guides = none
ij_wrap_on_typing = false


[*.java]
ij_continuation_indent_size = 2
ij_java_align_multiline_annotation_parameters = true
ij_java_align_multiline_array_initializer_expression = true
ij_java_align_multiline_binary_operation = true
ij_java_align_multiline_method_parentheses = false
ij_java_align_multiline_parameters_in_calls = false
ij_java_annotation_parameter_wrap = on_every_item
ij_java_array_initializer_new_line_after_left_brace = true
ij_java_array_initializer_right_brace_on_new_line = true
ij_java_array_initializer_wrap = on_every_item
ij_java_assignment_wrap = normal
ij_java_binary_operation_wrap = normal
ij_java_call_parameters_new_line_after_left_paren = true
ij_java_call_parameters_wrap = on_every_item
ij_java_enum_constants_wrap = split_into_lines
ij_java_for_statement_wrap = on_every_item
ij_java_generate_final_locals = false
ij_java_generate_final_parameters = false
ij_java_imports_layout = $*, |, java.**, javax.**, |, *, |, com.tml.**
ij_java_keep_first_column_comment = false
ij_java_keep_line_breaks = true
ij_java_keep_simple_lambdas_in_one_line = true
ij_java_keep_simple_methods_in_one_line = true
ij_java_method_call_chain_wrap = on_every_item
ij_java_method_parameters_new_line_after_left_paren = false
ij_java_method_parameters_wrap = on_every_item
ij_java_parameter_annotation_wrap = on_every_item
ij_java_prefer_parameters_wrap = true
ij_java_resource_list_wrap = on_every_item
ij_java_space_after_closing_angle_bracket_in_type_argument = true
ij_java_space_after_comma_in_type_arguments = false
ij_java_space_before_catch_parentheses = false
ij_java_space_before_if_parentheses = false
ij_java_space_before_switch_parentheses = false
ij_java_space_before_synchronized_parentheses = false
ij_java_space_before_try_parentheses = false
ij_java_space_before_while_parentheses = false
ij_java_ternary_operation_signs_on_next_line = true
ij_java_ternary_operation_wrap = split_into_lines
ij_java_variable_annotation_wrap = split_into_lines


[{*.properties,spring.handlers,spring.schemas}]
ij_properties_align_group_field_declarations = false
ij_properties_keep_blank_lines = false
ij_properties_key_value_delimiter = equals
ij_properties_spaces_around_key_value_delimiter = false

[{*.yaml,*.yml}]
ij_yaml_keep_indents_on_empty_lines = false
ij_yaml_keep_line_breaks = true
ij_yaml_space_before_colon = false
ij_yaml_spaces_within_braces = true
ij_yaml_spaces_within_brackets = true